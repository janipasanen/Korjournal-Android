    <TextView 
   	    android:id="@+id/edit_startodometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="@string/edit_startodometer"/>
   
     <EditText
        android:id="@+id/edit_startodometerValue"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_startodometerValue" />
     
     <TextView 
   	    android:id="@+id/edit_arriveodometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="@string/edit_arriveodometer"/>
   
     <EditText
        android:id="@+id/edit_arriveodometerValue"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_arriveodometerValue" />
     
     <TextView 
   	    android:id="@+id/edit_purposeoftrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="@string/edit_purposeoftrip"/>
   
     <EditText
        android:id="@+id/edit_purposeoftripValue"
        android:inputType="textAutoCorrect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_purposeoftripValue" />


    <ToggleButton
        android:id="@+id/toggleLoggingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="@string/button_ToggleLogging"
        android:textOff="Start logging"
        android:textOn="Stop logging"        />

</LinearLayout>